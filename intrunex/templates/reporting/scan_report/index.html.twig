{% extends 'base.html.twig' %}

{% block title %}Scan Reports{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Scan Reports</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">All Scan Reports</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered scan-reports-table" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Target</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for scanJob in scanJobs %}
                            <tr>
                                <td>{{ scanJob.id }}</td>
                                <td>{{ scanJob.asset.name }}</td>
                                <td>{{ scanJob.status }}</td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm">View Report</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No scan jobs found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
